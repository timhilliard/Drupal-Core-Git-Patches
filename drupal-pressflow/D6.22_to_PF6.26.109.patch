+/**
+ * Remove all files from specified directory and then remove directory. (Drupal 6)
+ *
+ * @param string $path Directory path.
+ */
+function simpletest_clean_temporary_directory($path) {
+  // Drupal 6.
+  if (!is_dir($path)) {
+    return;
+  }
+
+  $files = scandir($path);
+  foreach ($files as $file) {
+    if ($file != '.' && $file != '..') {
+      $file_path = "$path/$file";
+      if (is_dir($file_path)) {
